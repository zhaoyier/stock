<seelog type="asyncloop">
    <outputs formatid="main">
        <filter levels="trace,debug,info,warn,critical,error">
            <console />
        </filter>
        <filter levels="trace,debug,info,warn,critical,error">
            <rollingfile type="date" filename="/data/logs/logs/game_debug.log" datepattern="2006.01.02" maxrolls="10000000" />
        </filter>
        <filter levels="error,critical">
            <rollingfile type="date" filename="/data/logs/logs/game_error.log" datepattern="2006.01.02" maxrolls="10000000" />
        </filter>
    </outputs>
    <formats>
        <format id="main" format="%Date/%Time[%LEVEL]%File:%Line %Msg%n"/>
    </formats>
</seelog>