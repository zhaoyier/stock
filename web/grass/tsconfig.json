{
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"noImplicitAny": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"noUnusedLocals": true,
    "checkJs": false,
    "moduleResolution": "node",
    "lib":[
			"dom",
			"es5",
			"es6",
			"scripthost",
			"dom.iterable",
			"es2016.array.include"
    ]
	},
  "types": [
    "react",
    "react-dom",
		"node",
		"react-router"
  ],
	"include": [
		"./**/*.ts",
    "./**/*.tsx"
	],
	"exclude": [
    "node_modules",
    "./asset/**/*.js",
    "./asset/*.js"
	]
}
